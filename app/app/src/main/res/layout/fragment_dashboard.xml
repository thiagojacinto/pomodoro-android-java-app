<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_hist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hist_title"
        android:textSize="28sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50sp"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="locale"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fillViewport="true"
            >

            <ListView
                android:id="@+id/hist_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </ScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp"
            />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/danger_rectangle_gradient"
            android:text="@string/clear_all_button"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_view_unseen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>